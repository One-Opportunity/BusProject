<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="peace.tabbutton.MainActivity">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab1"
            android:drawableTop="@drawable/tab1"
            android:background="@android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/str_tab_favorite"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab2"
            android:drawableTop="@drawable/tab2"
            android:background="@android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/str_tab_station"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab3"
            android:drawableTop="@drawable/tab3"
            android:background="@android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/str_tab_route"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab4"
            android:drawableTop="@drawable/tab4"
            android:background="@android:color/transparent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/str_tab_info"/>

    </LinearLayout>

</RelativeLayout>
